{% extends "user.twig" %}
{% block pageTitle %}Edit my profile / Alexander Kalichava / Paragliding club and school{% endblock %}
{% block mainContent %}
<div class="main-content">
    <a id="start" name="start"></a>
    <div class="article-heading-container">
        <h2 class="article-parent">Alexander Kalichava</h2>
        <h1 class="article-heading">Edit my profile</h1>
    </div>
    <div class="user-form">
        <form action="#">
            <fieldset>
                <legend>Персональная информация</legend>
                <div class="row clearfix avatar-container">
                    <label for="pilot-about">Коротко о себе</label>
                    <textarea id="pilot-about" name="pilot-about" rows="3"></textarea>
                    <div class="pilot-picture has-icons">
                        <div class="avatar size-140">
                            <img src="img/140x140/1.jpg" />
                            <div class="his-data">
                                <a href="#his-photos" class="hastip" title="Photogalleries | 13"><svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"><path d="M13.7 5.738l-1.637-4.509c-.121-.333-.476-.509-.791-.394l-10.878 3.97c-.316.114-.475.478-.354.81l1.726 4.754v-2.548c0-1.15.918-2.084 2.049-2.084h2.874l3.428-2.406 1.984 2.406h1.599zm1.69 1.444h-11.576c-.336 0-.61.287-.61.642v7.537c0 .354.273.642.61.642h11.576c.337 0 .61-.287.61-.642v-7.538c0-.354-.273-.641-.61-.641zm-.883 7.216h-9.596v-1.375l1.476-3.436 2.215 2.75 2.078-2.13 2.671-.964 1.156 2.578v2.578z"/></svg></a>
                                <a href="#his-videos" class="hastip" title="Video | 2"><svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"><path d="M15.33 4.501c-2.243-.321-4.723-.501-7.33-.501s-5.087.18-7.331.501c-.43 1.684-.669 3.544-.669 5.499s.239 3.814.669 5.498c2.244.324 4.724.502 7.331.502s5.087-.178 7.33-.502c.431-1.684.67-3.543.67-5.498s-.239-3.815-.67-5.499zm-9.33 8.499v-6l5 3-5 3z"/></svg></a>
                                <a href="#his-news" class="hastip" title="News | 23"><svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"><path d="M12 .8h-8c-.88 0-1.6.72-1.6 1.6v11.2c0 .88.72 1.6 1.6 1.6h8c.88 0 1.6-.72 1.6-1.6v-11.2c0-.88-.72-1.6-1.6-1.6zm-7.35 3.335h6.7v1.4h-6.7v-1.4zm6.7 7.681h-6.7v-1.4h6.7v1.4zm.019-3.12h-6.7v-1.44h6.7v1.44z"/></svg></a>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row clearfix one-half">
                    <label for="pilot-avatar">Аватар</label>
                    <input type="file" name="pilot-avatar" id="pilot-avatar" />

                </div>
                <div class="row clearfix one-half">
                    <label for="pg-name">На чем летаете?</label>
                    <input class="float-left" type="text" id="pg-name1" name="pg-name1" maxlength="200" placeholder="Niviuk Peak" />
                    <input class="float-left" type="text" id="pg-name2" name="pg-name2" maxlength="200" placeholder="Марка и модель параплана (мотора)" />
                    <a href="#"><svg class="svg-icon add-new-pg animate" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"><path d="M8 1.28c-3.712 0-6.72 3.01-6.72 6.72 0 3.712 3.009 6.72 6.72 6.72s6.72-3.009 6.72-6.72-3.009-6.72-6.72-6.72zm.818 7.538v3.222h-1.635v-3.222h-3.222v-1.635h3.222v-3.222h1.636v3.222h3.222v1.636h-3.222z"/></svg></a>
                </div>
                <div class="row clearfix one-half">
                    <label for="start-flying">Начиная с:</label>
                    <select class="select-year float-left">
                        <option>1990</option>
                        <option>1991</option>
                        <option>1992</option>
                        <option>1993</option>
                        <option>1994</option>
                        <option>1995</option>
                        <option>1996</option>
                        <option>1997</option>
                        <option>1998</option>
                        <option>1999</option>
                        <option>2000</option>
                        <option>2001</option>
                        <option>2002</option>
                        <option>2003</option>
                        <option>2004</option>
                        <option>2005</option>
                        <option>2006</option>
                        <option>2007</option>
                        <option>2008</option>
                        <option>2009</option>
                        <option>2010</option>
                        <option>2011</option>
                        <option>2012</option>
                        <option>2013</option>
                        <option selected="selected">2014</option>
                    </select>
                    <div class="float-left add10l input-addition">года</div>
                </div>
            </fieldset>
            <fieldset>
                <legend>Контактная информация</legend>
                <div class="row clearfix one-half">
                    <label for="pilot-email">E-mail</label>
                    <input type="text" id="pilot-email" name="pilot-email" maxlength="50" />
                </div>
                <div class="row clearfix one-half">
                    <label for="pilot-phone">Номер телефона</label>
                    <input type="text" id="pilot-phone" name="pilot-phone" maxlength="50" />
                </div>
                <div class="row clearfix one-half">
                    <label for="pilot-smsmail">SMS-mail (идентификатор)</label>
                    <input type="text" id="pilot-smsmail" name="pilot-smsmail" maxlength="50" />
                </div>
                <div class="row clearfix one-half">
                    <label for="pilot-site">Сайт</label>
                    <input type="text" id="pilot-site" name="pilot-site" maxlength="200" />
                </div>
            </fieldset>
            <fieldset>
                <legend>Изменить пароль</legend>
                <div class="row clearfix one-half">
                    <label for="pass">Current password</label>
                    <input type="password" id="pass" name="pass" maxlength="50" />
                </div>
                <div class="row clearfix one-half">
                    <label for="pass-new">New password</label>
                    <input type="password" id="pass-new" name="pass-new" maxlength="50" />
                </div>
                <div class="row clearfix one-half">
                    <label for="pass-new-repeat">Repeat new password</label>
                    <input type="password" id="pass-new-repeat" name="pass-new-repeat" maxlength="50" />
                </div>
            </fieldset>
            <div class="button inverse at-center"><a href="#">Сохранить изменения</a></div>
        </form>
    </div>
</div>
{% endblock mainContent %}
