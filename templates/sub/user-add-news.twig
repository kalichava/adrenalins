{% extends "user.twig" %}
{% block pageTitle %}Edit my profile / Alexander Kalichava / Paragliding club and school{% endblock %}
{% block mainContent %}
<div class="main-content">
    <a id="start" name="start"></a>
    <div class="article-heading-container">
        <h2 class="article-parent">Alexander Kalichava</h2>
        <h1 class="article-heading">Add news</h1>                
    </div>
    <div class="user-form">
        <form action="#">
            <div class="row clearfix">
                <input type="text" name="news-name" id="news-name" maxlength="200" required="required" placeholder="Название новости" />
            </div>
            <div class="row clearfix">
                <textarea id="news-lead" name="news-lead" rows="5" maxlength="400" required="required" placeholder="Короткое вступление"></textarea>
            </div>
            <div class="row clearfix">
                <textarea id="news-text" name="news-text" rows="20" required="required"></textarea>
                <div style="height:10px;"></div>
            </div>
            <div class="row clearfix">
                <label for="news-image">Картинка к новости</label>
                <input type="file" name="news-image" id="news-image">
            </div>
            <div class="row clearfix">
                <label for="news-categories">Выберите одну или несколько категорий новости</label>
                <select name="news-categories" id="news-categories" multiple="multiple" size="6">
                    <option value="school">School</option>
                    <option value="tandems">Tandems</option>
                    <option value="club" selected="selected">Club</option>
                    <option value="competitions">Competitions</option>
                    <option value="equipment">Equipment</option>
                    <option value="motors">Motors</option>
                </select>
                <div class="small lighter align-right">Ctrl+click чтобы выбрать несколько</div>
            </div>
            <div class="row clearfix">
                <label for="news-photos">Прикрепить свои фотогалереи</label>
                <select data-placeholder="Начните вводить название..." class="chosen-select" name="news-photos" id="news-photos" multiple="multiple" size="4">
                    <option value="1">Gallery Name 1</option>
                    <option value="2">Gallery Name 2</option>
                    <option value="3">Gallery Name 3</option>
                    <option value="4">Gallery Name 4</option>
                    <option value="5">Gallery Name 5</option>
                    <option value="6">Gallery Name 6</option>
                </select>
                <div class="small lighter align-right">Ctrl+click чтобы выбрать несколько</div>
            </div>
            <div class="row clearfix">
                <label for="news-video">Прикрепить свои видео</label>
                <select data-placeholder="Начните вводить название..." class="chosen-select" name="news-video" id="news-video" multiple="multiple" size="1">
                    <option value="1">Video Name 1</option>
                    <option value="2">Video Name 2</option>
                    <option value="3">Video Name 3</option>
                    <option value="4">Video Name 4</option>
                    <option value="5">Video Name 5</option>
                    <option value="6">Video Name 6</option>
                </select>
                <div class="small lighter align-right">Ctrl+click чтобы выбрать несколько</div>
            </div>
            <div class="row clearfix">
                <label for="news-places">Прикрепить места</label>
                <select data-placeholder="Начните вводить название..." class="chosen-select" name="news-places" id="news-video" multiple="multiple" size="4">
                    <option value="1">Place Name 1</option>
                    <option value="2">Place Name 2</option>
                    <option value="3">Place Name 3</option>
                    <option value="4">Place Name 4</option>
                    <option value="5">Place Name 5</option>
                    <option value="6">Place Name 6</option>
                </select>
                <div class="small lighter align-right">Ctrl+click чтобы выбрать несколько</div>
            </div>
            <div class="row clearfix">
                <label for="news-events">Прикрепить события</label>
